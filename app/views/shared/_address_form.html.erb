<%= form_tag("/postcode", method: "post") do %>
  <div class="search-form">
    <%= text_field_tag(:postcode, nil, placeholder: 'Enter your full postcode', class:"form-input", style: "text-indent: 15px;", pattern: '^([a-zA-Z]{0,2})([0-9][0-9]|[0-9]|[a-zA-Z][0-9][a-zA-Z]|[a-zA-Z][0-9][0-9]|[a-zA-Z][0-9])([ ]*)([0-9]{1,2})([a-zA-z][a-zA-z])$') %>
    <%= button_tag type: 'submit', class: "btn-orange" do %>
        <i class="fas fa-chevron-right" style="font-size: 24px; position: relative; bottom: 2px; color: rgba(0, 0, 0, 0.6);"></i>
    <% end %>
  </div>
<% end %>
