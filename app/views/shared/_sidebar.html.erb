<div class="sidebar">
  <div class="top-links">
    <%= link_to discover_path do %>
      <%= image_tag "PiattoLogo.svg", class: 'sb-piatto-logo' %>
    <% end %>
    <div class="sb-link-box">
      <div class="sb-selector <%= 'sb-active' if current_page?('/discover') %>"></div>
      <%= link_to discover_path, class: 'sb-link sb-disco' do %>
        <%= image_tag("pihome.svg", class: 'sb-icon') %>
        <p>Discover</p>
      <% end %>
    </div>
    <!-- <hr class="sb-hr"/> -->
    <div class="sb-link-box">
      <div class="sb-selector <%= 'sb-active' if (controller_name.eql? "dishlists") && (action_name.eql? "index") && (params[:user_id].eql? current_user.id.to_s) %>"></div>
      <%= link_to user_dishlists_path(current_user), class: 'sb-link sb-my' do %>
        <%= image_tag("pilibrary.svg", class: 'sb-icon') %>
        <p>My dishlists</p>
      <% end %>
    </div>
    <!-- <hr class="sb-hr"/> -->
    <p class="sb-sn">Search nearby</p>
    <%= form_tag search_path, method: :get, class: 'sb-search-field' do %>
        <%= image_tag "pisearch.svg", class: 'sb-icon sb-search-icon' %>
      <%= text_field_tag :query, params[:query], class: "form-control sb-search", placeholder: "People, dishes", required: true %>
    <% end %>

    <br>
  </div>

  <div class="bottom-link" style="position: fixed; bottom: 30px; margin: 0 10px;">
    <div class="socials d-flex">
      <a href="#"><i class="fab fa-facebook-square m-2 social hov" style="color: grey; font-size: 26px;"></i></a>
      <a href="#"><i class="fab fa-instagram-square m-2 social hov" style="color: grey; font-size: 26px;"></i></a>
      <a href="#"><i class="fab fa-twitter-square m-2 social hov" style="color: grey; font-size: 26px;"></i></a>
    </div>
  </div>
</div>
