<div class="navbar navbar-expand-sm navbar-lewagon d-flex">
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown" id="navbarDropdown">
          <p class="nav-link dropdown-toggle" data-toggle="dropdown"> <%= current_user.first_name %> <%= current_user.last_name %>
          <%= avatar_tag class: "rounded-circle dropdown-toggle ml-3", width: 40, height: 40, id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Your Profile", profile_path(current_user) , class: "dropdown-item" %>
            <%= link_to "Edit Profile", edit_user_registration_path(current_user) , class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
